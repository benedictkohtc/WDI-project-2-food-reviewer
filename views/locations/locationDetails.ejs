<div class="container">
    <% data.forEach(function (element) { %>
        <h1 class="page-header"><%= element.name %></h1>
        <h5>location submitted by: <a href="../profile/user/<%= element.posterID %>"><%= element.poster %></a></h5>
        <ul class="list-group">
            <li class="list-group-item">
                <%= element.address %>
            </li>

            <li class="list-group-item">
                <h4>Tags:</h4>
                <% element.tagsArray.forEach(function (tagElement) { %>
                    <%= tagElement.tag %>
                <% }) %>
            </li>

            <li class="list-group-item">
                <form action="../tags/<%= element._id %>" method="POST">
                    <div class="form-group">
                        <h3>Tag this location!</h3>
                        <input type="text" class="form-control" id="titleInput" placeholder="Tags" name="tag">
                    </div>
                    <button type="submit" class="btn btn-default">Add A Tag</button>
                </form>
            </li>



            <li class="list-group-item">
                <h4>Reviews:</h4>
                <% element.reviewsArray.forEach(function (reviewElement) { %>
                    <div>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</div>
                    <div>
                    <% if (reviewElement.posterID.toString() === currentUserID.toString()){ %>
                      <form method="POST" action="../reviews/<%= reviewElement._id %>?_method=PUT">
                        <input type="text" class="form-control" id="reviewInput" placeholder="Review" name="review" value="<%= reviewElement.review %>">
                        <button type="submit" class="btn btn-default">Edit Review</button>
                      </form>
                      <form method="POST" action="../reviews/<%= reviewElement._id %>?_method=DELETE">
                        <button type="submit" class="btn btn-default">Remove Review</button>
                      </form>
                    <% } else { %>
                      <%= reviewElement.review %>
                    <% } %>
                    <h6>review submitted by: <a href="../profile/user/<%= reviewElement.posterID %>"><%= reviewElement.poster %></a></h6>
                    </div>
                <% }) %>
            </li>

            <li class="list-group-item">
                <form action="../reviews/new/<%= element._id %>" method="POST">
                    <div class="form-group">
                        <h3>Submit Your Review</h3>
                        <label for="review">Review</label>
                        <input type="text" class="form-control" id="titleInput" placeholder="Review" name="review">
                        <input type="hidden" name="location" value="<%= element.name %>">
                    </div>
                    <button type="submit" class="btn btn-default">Add A Review</button>
                </form>
            </li>

            <% }) %>
        </ul>
</div>
